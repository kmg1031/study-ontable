# Database
DATABASE_URL="postgresql://username:password@localhost:5432/study_ontable?schema=public"

# Server
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d

# Cors
CORS_ORIGIN=http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads

# TossPayments (추후 Phase 2에서 사용)
TOSS_PAYMENTS_SECRET_KEY=your-toss-payments-secret-key
TOSS_PAYMENTS_CLIENT_KEY=your-toss-payments-client-key